<Window x:Class="LightX_01.GuideWindow"
        x:Name="NewGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightX_01"
        mc:Ignorable="d"
        Height="740" Width="740" ResizeMode="NoResize" Topmost="False" WindowState="Normal">
    
    <StackPanel Orientation="Vertical">
        <Label FontSize="18" Margin="0,10,0,0" Content="{Binding CurrentTest}"/>
        <Label Content="Instructions :" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding CurrentTest}" Margin="5,10,0,0"/>
        <Button Name="ButtonCreate"  Content="Test Suivant" Width="90" Margin="0,0,10,0" Command="{Binding NextTestCommand}" CommandParameter="{Binding ElementName=NewGuideWindow}"/>
    </StackPanel>
</Window>
